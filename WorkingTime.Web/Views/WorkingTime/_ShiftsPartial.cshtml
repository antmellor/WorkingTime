@model EmployeeShiftViewModel
<div>
    <div class="row">
        <div class="col-md-8">
            <h3><b>Total Hours Worked in Month: </b> @Model.TotalHours </h3>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">Shift Name</th>
                <th scope="col">Date</th>
                <th scope="col">Start Time</th>
                <th scope="col">End Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shift in Model.ShiftsForMonth)
            {
                <tr>
                    <td>@shift.ShiftName</td>
                    <td>@shift.ShiftStart.ToShortDateString()</td>
                    <td>@shift.ShiftStart.ToShortTimeString()</td>
                    <td>@shift.ShiftEnd.ToShortTimeString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>